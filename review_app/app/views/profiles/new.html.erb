<div class="container">
	<h1 class="jumbotron-heading">Register</h1>

	<%= form_for :profile, url: profiles_path do |f| %>
		<div class="form-group">
			<%= f.label :fullName %>
			<%= f.text_field :fullName, class:'form-control'%>
			<%= f.label :dob %>
			<%= f.date_field :dob , class:'form-control'%>
			<%= f.label :address %>
			<%= f.text_field :address , class:'form-control'%>
			<%= f.label :city %>
			<%= f.text_field :city , class:'form-control'%>
			<%= f.label :country %>
			<%= f.text_field :country, class:'form-control'%>
			<%= f.label :profilePicture %>
			<%= f.file_field :profilePicture , class:'form-control'%>
			<%= f.submit %>
		</div>
	<% end %>

</div>