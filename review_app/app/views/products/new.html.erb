<div class="container">
	<h1 class="jumbotron-heading">Add New Product</h1>

	<%= form_for :product, url: products_path do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class:'form-control'%>
			<%= f.label :brand %>
			<%= f.text_field :brand , class:'form-control'%>
			<%= f.label :averageCost %>
			<%= f.number_field :averageCost , class:'form-control'%>
			<%= f.label :category %>
			<%= f.text_field :category , class:'form-control'%>
			<%= f.label :releaseDate %>
			<%= f.date_field :releaseDate, class:'form-control'%>
			<%= f.label :description %>
			<%= f.text_area :description , class:'form-control'%>
			<%= f.label :productImage %>
			<%= f.file_field :productImage , class:'form-control'%>
			<%= f.submit %>
		</div>
	<% end %>

</div>