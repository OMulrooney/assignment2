<div class="container">
	<h2>Products</h2>
	<%= link_to 'Add New Product', products_new_path %>
	<table border="1" class="table products-table">
		<tr>
			<th> Product Name </th>
			<th> Brand</th>
			<th> Average Price </th>
			<th> Category </th>
			<th> Release Date </th>
			<th> Description </th>
			<th> Image </th>
			<th> Product Page </th>
		</tr>
		<% @products.each do |product| %>
			<tr>
				<td> <%= product.name %> </td>
				<td> <%= product.brand %> </td>
				<td> <%= product.averageCost %> </td>
				<td> <%= product.category %> </td>
				<td> <%= product.releaseDate %> </td>
				<td> <%= product.description %> </td>
				<td> <%= image_tag(product.productImage.url, alt: 'Image') if product.productImage? %> </td>
				<td> <%= link_to 'Product Page', product_path(product) %> </td>
			</tr>
		<% end %>
	</table>
</div>
